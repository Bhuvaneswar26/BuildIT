    <style>
      .card {
        width: fit-content;
        height: fit-content;
        background-color: rgb(255,255,255);
        border-radius: 8px;
        margin-bottom: 20px;
        z-index: 1;
        border-radius: 20px;
        border: 1px solid black;
      }

      .card-inactive {
        width: fit-content;
        height: fit-content;
        background-color: rgb(255,255,255);
        border-radius: 8px;
        margin-bottom: 20px;
        z-index: 1;
        border-radius: 20px;
        border: 1px solid black;
      }

      .card-inactive:hover {
        box-shadow: 4px 4px rgba(132, 130, 130, 0.426);
      }

      .tools {
        display: flex;
        align-items: center;
        padding: 12px;
      }

      .circle {
        padding: 0 4px;
      }

      .box {
        display: inline-block;
        align-items: center;
        width: 10px;
        height: 10px;
        padding: 1px;
        border-radius: 50%;
      }

      .red {
        background-color: #ff605c;
        display: none;
      }

      .yellow {
        background-color: #ffbd44;
        display: none;
      }

      .green {
        background-color: #00ca4e;
        display: none;
      }

      .cardy {
        text-decoration: none;
        font-family: Inconsolata;
        border: 2px solid rgb(255, 255, 255);
        padding: 50px;
        min-height: 260px;
        border-radius: 20px;
        display: block;
        padding-top: 15px;
      }
      /* .cardy:hover {
        box-shadow: 4px 4px rgba(132, 130, 130, 0.426);
      } */
      .card-content {
        width: 250px;
        min-height: 220px;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        z-index: -1;
      }
      .title {
        font-size: 22.75px;
        color: rgb(0, 0, 0);
        font-weight: 700;
        line-height: 30px;
      }
      .details {
        display: flex;
        flex-direction: column;
        background: rgb(236, 236, 236);
